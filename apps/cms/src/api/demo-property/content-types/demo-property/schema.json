{
  "kind": "collectionType",
  "collectionName": "demo_properties",
  "info": {
    "singularName": "demo-property",
    "pluralName": "demo-properties",
    "displayName": "Demo Property",
    "description": "Properties for real estate demos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "propertyType": {
      "type": "enumeration",
      "enum": ["apartment", "villa", "office", "retail", "land"],
      "required": true
    },
    "listingType": {
      "type": "enumeration",
      "enum": ["sale", "rent"],
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["USD", "EUR", "SAR", "AED", "EGP"],
      "default": "USD"
    },
    "bedrooms": {
      "type": "integer"
    },
    "bathrooms": {
      "type": "integer"
    },
    "area": {
      "type": "decimal"
    },
    "areaUnit": {
      "type": "enumeration",
      "enum": ["sqft", "sqm"],
      "default": "sqm"
    },
    "address": {
      "type": "text",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "location": {
      "type": "json"
    },
    "features": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "hotspotPosition": {
      "type": "json"
    },
    "demo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::demo.demo",
      "inversedBy": "properties"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
