{
  "kind": "collectionType",
  "collectionName": "demo_rooms",
  "info": {
    "singularName": "demo-room",
    "pluralName": "demo-rooms",
    "displayName": "Demo Room",
    "description": "Rooms for hotel demos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "roomType": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "pricePerNight": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "enumeration",
      "enum": ["USD", "EUR", "SAR", "AED", "EGP"],
      "default": "USD"
    },
    "maxGuests": {
      "type": "integer",
      "default": 2
    },
    "bedType": {
      "type": "string",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "size": {
      "type": "integer"
    },
    "amenities": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "hotspotPosition": {
      "type": "json"
    },
    "demo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::demo.demo",
      "inversedBy": "rooms"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
