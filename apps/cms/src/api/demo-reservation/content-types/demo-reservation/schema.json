{
  "kind": "collectionType",
  "collectionName": "demo_reservations",
  "info": {
    "singularName": "demo-reservation",
    "pluralName": "demo-reservations",
    "displayName": "Demo Reservation",
    "description": "Reservations for restaurant demos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "reservationNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "email"
    },
    "customerPhone": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "time": {
      "type": "time",
      "required": true
    },
    "partySize": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "tablePreference": {
      "type": "string"
    },
    "specialRequests": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "seated", "completed", "cancelled", "noshow"],
      "default": "pending"
    },
    "demo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::demo.demo"
    }
  }
}
